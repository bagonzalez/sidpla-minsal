{# empty Twig template #}

{% block body %}
<script type="text/javascript">
      $(document).ready(function(){
        
        var myGrid = $('#theGrid4');        
        myGrid.jqGrid({ 
          url: 'consultarInformacionRelevanteJSON',
     scrolling: true,
          datatype:'json',
          altRows:true,
          colNames:['Categoria','Cantidad'],
          colModel:[
            { name:'categoria', index: 'categoria', width:450,editable:false,editoptions:{size:15}, searchtype:"integer", searchrules:{"required":true, "number":true, "maxValue":2000000}  },            
            { name:'cantidad', index: 'cantidad',width:100, sortable:false,editable:true,editoptions:{size:100},formoptions:{ rowpos:3, label: "Codigo categoria", elmprefix:"(*)"},editrules:{required:true} }] ,            
                        
            
          rowNum:10,
          rownumbers: true,
         rowTotal: 10,
          rowList:[10,20,30],
         
          rownumWidth: 40,
          multiselect: false,
          pager: jQuery('#pager4'),
          viewrecords: true,                   
           sortname: 'categoria',
            sortorder: "asc",
            caption: 'Informacion Relevante',
            height: "auto",
            editCaption: "Editar ",
            addCaption: "Nuevo ",
            editurl: 'manttInformacionComplementariaEdicion'
        });
         myGrid.jqGrid('navGrid','#pager',
        {edit:false,add:false,del:false,view:true},
        {},//edit
        {},//add
        {},//del
        {}, //search
        {}//view
        );
        
       
      }
 
);
</script>


<table id="theGrid4" class="scroll"></table> 
<div id="pager4" class="scroll" style="text-align:center;"></div>

{% endblock %}
