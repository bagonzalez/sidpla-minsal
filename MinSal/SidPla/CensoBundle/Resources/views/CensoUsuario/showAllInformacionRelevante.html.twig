{% block body %}
 <script type="text/javascript">
      $(document).ready(function(){
          
      });     
 </script>
 
{% if bloques is defined %}
    {% for bloque in bloques %}
        {% if bloque.ordenBloque == 4%}
            <h3>{{ bloque.nombreBloque }}</h3>
            <table border="1">
                <thead>                    
                    <tr>
                         <td rowspan="2" colspan="1" >  </td>
                         <th colspan="2" >Total</th>                        
                    </tr>                   
                </thead>
                <tbody>
            {% for categoria in bloque.getCategoriasCenso %} 
                 {% if censoPoblacion is defined %}                    
                    <tr>
                        <td colspan="1" >{{ categoria.descripcionCategoria }} </td>                             
                    {% for infRelvante in censoPoblacion.getInformacionRelevante %}                     
                        {% if infRelvante.categoriaCenso.idCategoriaCenso == categoria.idCategoriaCenso  %}                           
                                <td align="center" >  
                                        <input size="2" readonly="readonly" name="idInfoComURBANA{{categoria.idCategoriaCenso}}" value="{{ infRelvante.getInfRelCant }}"></input>
                                </td>                                                   
                        {% endif %}   
                    {% endfor %}                                      
                    </tr>
                  {% endif %}
            {% endfor%}
                </tbody>
            </table>                    
        {% endif %}
    {% endfor %}
{% endif %}
                       


{% endblock %}
