         rowTotal: 10,
          rowList:[10,20,30],
         // height: 55,
          rownumWidth: 40,
          multiselect: false,
          pager: jQuery('#pager'),
          viewrecords: true,          
         //scroll:true,
          loadonce:true, 
           sortname: 'id',
            sortorder: "asc",
            caption: 'Bloques del Censo Geo-Poblacional',
            height: "100%",
            editCaption: "Editar Bloque del Censo",
            addCaption: "Nuevo Bloque Censo",
            editurl: 'manttBloqueCensoEdicion'
        });
         myGrid.jqGrid('navGrid','#pager',
        {edit:false,add:false,del:false,view:true},
