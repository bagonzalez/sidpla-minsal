{# Muestra todos las opciones #}
{% block body %}
    <script type="text/javascript">
      $(document).ready(function(){

        var myGrid = $('#theGrid');        
        myGrid.jqGrid({
          datatype:'clientSide',
          altRows:true,
          colNames:['Nombre', 'Descripcion', 'Enlace'],
          colModel:[
            { name:'nombre', index: 'nombre', width:150 },
            { name:'descripcion', index: 'descripcion', width:300 },
            { name:'enlace', index: 'enlace', width:300 } ],
          rowNum:10,
          rowList:[10,20,30],
          multiselect: true,
          pager: jQuery('#pager'),
          viewrecords: true,
          imgpath: 'css/start/images',
            caption: 'Opciones del sistema',
            height: "100%"
        });

        {% for opc in opciones %}
            myGrid.addRowData("{{ opc.idOpcionSistema }}", {nombre:"{{ opc.nombreOpcion }}", descripcion:"{{ opc.descripcionOpcion }}", enlace:"{{ opc.enlace }}"});     
        {% endfor %}
      });
    </script>
      <div id="grid_wrapper" class="ui-corner-all floatLeft">
        <table id="theGrid" class="scroll" ></table> 
        <div id="pager"  class="scroll" style="text-align:center;"></div> 
      </div>
    
