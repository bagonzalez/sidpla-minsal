{# Asignar/Desasignar opciones de roles en el sistema #}
{% extends 'MinSalSidPlaBundle:Default:index.html.twig' %}
{% block titulo %}Asignaci&oacute;n de Opciones a Roles del Sistema{% endblock %}
{% block body %}
    <script type="text/javascript">
        
      $(document).ready(function(){
          $('#agregar').click(pasar);
          $('#quitar').click(eliminar);                    
      });
      
      $.getJSON('consultarRoles', function(data) {
              var i=0;
              $.each(data, function(key, val) {
                  if(key=='rows'){
                    $.each(val, function(id, registro){
                        $('#selecrol').append('<option value="'+registro['cell'][0]+'">'+registro['cell'][1]+'</option>');
                    });                    
                  }
              });
      });
      
      $.getJSON('consultarOpc', function(data) {
              var i=0;
              $.each(data, function(key, val) {
                  if(key=='rows'){
                    $.each(val, function(id, registro){
                        $('#opcdisponibles').append('<option value="'+registro['cell'][0]+'">'+registro['cell'][1]+'</option>');
                    });                    
                  }
              });
      });
      
      function pasar(){            
            $('#opcdisponibles option:selected').each(
            function(){
                    $('#opcdisponibles option:selected').appendTo("#opcselecc")
            })
       }
       
       function eliminar(){            
            $('#opcselecc option:selected').each(
            function(){
                    $('#opcselecc option:selected').appendTo("#opcdisponibles")
            })
       }
    </script>
