{% extends 'MinSalSidPlaBundle:Default:index.html.twig' %}
{% block body %}
<script type="text/javascript">
	Highcharts.theme = { colors: ['#4572A7'] };// prevent errors in default theme
	var highchartsOptions = Highcharts.getOptions(); 
</script>
<script>
    
    
    $(document).ready(function(){
        {% if areasClasif is defined %} 
                {% for area in areasClasif %}
                     $("#{{  area.codArea }}AreaDiv").hide();
                      $("#mostratArea{{area.codArea  }}").click(function(){ 
                                $("#{{area.codArea  }}AreaDiv").toggle(400);
                            }                            
                         )
                {% endfor %} 
        {% endif %} 

        {% if objetivos is defined %}
                    
                    
                    {% for obj in objetivos %}
                        $("#{{ obj.codObjEspUni }}Div").hide();                        
                        
                        $("#mostratObj{{ obj.codObjEspUni }}").click(function(){ 
                                $("#{{ obj.codObjEspUni }}Div").toggle(400);
                            }                            
                         )
                             
                          {% for res in obj.getResultEspObjT %}
                                           var chart{{ res.codResEspUni }};
                                           var colores=['#4572A7','#AA4643','#89A54E','#80699B','#3D96AE','#DB843D' ];
                                           chart = new Highcharts.Chart({
                                              chart: {
                                                 renderTo: 'container{{ res.codResEspUni }}',
                                                 margin: [50, 0, 0, 0],
                                                 plotBackgroundColor: 'none',
                                                 plotBorderWidth: 0,
                                                 plotShadow: false            
                                              },
                                              title: {
                                                 text: 'Resultado Global de Actividades'
                                              },
                                              subtitle: {
                                                 text: 'Mensual'
                                              },
                                              tooltip: {
                                                 formatter: function() {
                                                    return '<b>'+ this.series.name +'</b><br/>'+ 
                                                       this.point.name +': '+ this.y +' %';
                                                 }
                                              },
                                               series: 
                                                   [{
                                                         type: 'pie',
                                                         name: 'Mes {{mes}}',
                                                         size: '40%',
                                                         innerSize: '20%',
                                                         data: [                                                   
                                                            {% for actividadAux in res.actividadesTemplate %}                                                                            
                                                                            {% for actividad in actividades %}                                                                     
                                                                               {% if actividadAux.codActUniTemp == actividad.actTemp.codActUniTemp %}  
                                                                                        { name: '{{ actividadAux.descActUniTemp }}', y: {{ actividad.getPorcentajeCumplimiento}} , color: colores[ Math.floor(Math.random()*(5-(0-1)))+0   ] },                                                                                           
                                                                               {% endif %}                                                                                   
                                                                            {% endfor %}
                                                            {% endfor %}
                                                            
                                                            
                                                       ],
                                                       dataLabels: {
                                                       enabled: true,
                                                       color: Highcharts.theme.textColor || '#000000',
                                                       connectorColor: Highcharts.theme.textColor || '#000000'
                                                        }
                                                }]
                                         });
                          
                          
                                $("#{{ res.codResEspUni }}ResDiv").hide();  
                                
                                $("#mostratRes{{ res.codResEspUni }}").click(function(){ 
                                        $("#{{ res.codResEspUni }}ResDiv").toggle(400);
                                    }                            
                                 )
                          {% endfor %}
                    {% endfor %} 
        {% endif %}  
            
         
                        
            
    });
</script>

    <br></br>               
    <form id = "formulario"  action="{{ path('MinSalSidPlaPrograMonitoreoBundle_guardarSeguimientoProgramacioUniSal') }}" method="post">
        <table align="center"  >
            <tr><td colspan="2" align="center"><h1>Ingreso de Resultados de Actividades - Programaci&oacute;n Monitoreo</h1>                    
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    Seleccione un objetivo especifico y resultado esperado para ingresar sus resultados de actividades. <br>
                    Cuando ingrese los resultados, seran notificados los responsables de la dependencias, asi como las Unidades que dependen de sus actividades.
                </td>
            </tr> 
            
             {% if areasClasif is defined %} 
                {% for area in areasClasif %}
                        <tr>
                            <td>
                                <h3>Clasificaci&oacute;n:</h3>
                            </td>
                            <td>
                                 <h3>&RightTriangle;<a  id="mostratArea{{ area.codArea }}" href="#">{{ area.getNombreArea }}</a></h3>                                
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" >
                                <div align="center"  class="visibility:visible;overflow-y:auto;overflow-x:auto;top:0;width:100%;height:135;position:relative;"  id="{{  area.codArea }}AreaDiv">
                                <table align="center"  >
                                    {% if objetivos is defined %}                                                                          
                                            {% for obj in objetivos %}
                                                    {% if obj.areaClaObj.codArea == area.codArea  %}
                                                                <tr>
                                                                    <td>
                                                                        <h3>Objetivo Especifico:</h3>
                                                                    </td>
                                                                    <td>
                                                                         <h3>&RightTriangle;<a  id="mostratObj{{ obj.codObjEspUni }}" href="#">{{ obj.descObjEspUni }}</a></h3>                                
                                                                         <h3> Realizado: {{ obj.getPorcentajeCumplimiento(idProgramon) }} % </h3>
                                                                    </td>
                                                                </tr>                        
                                                                <tr>
                                                                        <td colspan="2" align="center" size="100%" >                            
                                                                            <div   class="visibility:visible;overflow-y:auto;overflow-x:auto;top:0;width:100%;height:135;position:relative;"  id="{{ obj.codObjEspUni }}Div">
                                                                                <table border="1" >
                                                                                    {% for res in obj.getResultEspObjT %}                                               
                                                                                       {# if( (res.unidadOrganizativa.getIdUnidadOrg == idUnidad) or (res.unidadOrganizativa is null ) ) #}                                                                                                
                                                                                            <tr>
                                                                                                <td>
                                                                                                    <h4>Resultado Esperado:</h4>
                                                                                                </td>
                                                                                                <td>
                                                                                                    <h4> <a  id="mostratRes{{ res.codResEspUni }}" href="#">{{ res.descResEspUni }}</a></h4>
                                                                                                    <h4> Programado: {{ res.getPorcentajeCumplimiento(idProgramon) }} %</h4>
                                                                                                    {#<h4> Realizado : {{ res.getPorcentajeCumplimiento }} % </h4>
                                                                                                    <h4> Costo Real : $ {{ res.getCostoTotalReal }} </h4>
                                                                                                    <h4> Costo Programado : $ {{ res.getCostoTotalProgramado }} </h4>#}                                                            
                                                                                                </td>
                                                                                            </tr>                                                                                                        
                                                                                            <tr>
                                                                                                <td colspan="3" >
                                                                                                    <div align="center"  class="visibility:visible;overflow-y:auto;overflow-x:auto;top:0;width:100%;height:135;position:relative;"  id="{{ res.codResEspUni }}ResDiv">
                                                                                                        <table border="1">
                                                                                                        <thead>
                                                                                                            <tr>
                                                                                                                {% if mes == 1 %} 
                                                                                                                    <th align="center" colspan="9" ><h3>Actividades</h3> </th>
                                                                                                                {% endif %}     
                                                                                                                {% if mes == 2 %} 
                                                                                                                 <th align="center" colspan="14" ><h3>Actividades</h3> </th>
                                                                                                                {% endif %}
                                                                                                                {% if mes == 3 %} 
                                                                                                                 <th align="center" colspan="19" ><h3>Actividades</h3> </th>
                                                                                                                {% endif %}
                                                                                                                {% if mes == 4 %} 
                                                                                                                 <th align="center" colspan="24" ><h3>Actividades</h3> </th>
                                                                                                                {% endif %}
                                                                                                            </tr>
                                                                                                            <tr>                                                                        
                                                                                                                <th rowspan="2" >Descripcion</th>
                                                                                                                <th rowspan="2">Meta Anual</th>
                                                                                                                <th rowspan="2">Responsables</th>
                                                                                                                <th rowspan="2">Costo</th>
                                                                                                                {% if mes >= 1 %} 
                                                                                                                    <th colspan="5" >Enero</th>
                                                                                                                {% endif %}
                                                                                                                {% if mes >= 2 %} 
                                                                                                                    <th colspan="5" >Febrero</th>
                                                                                                                {% endif %}
                                                                                                                {% if mes >= 3 %} 
                                                                                                                    <th colspan="5" >Marzo</th>
                                                                                                                {% endif %}
                                                                                                                {% if mes >= 4 %} 
                                                                                                                    <th colspan="5" >Abril</th>
                                                                                                                {% endif %}
                                                                                                                {% if mes >= 5 %} 
                                                                                                                    <th colspan="5" >Mayo</th>
                                                                                                                {% endif %}
                                                                                                                {% if mes >= 6 %} 
                                                                                                                    <th colspan="5" >Junio</th>
                                                                                                                {% endif %}
                                                                                                                {% if mes >= 7 %} 
                                                                                                                    <th colspan="5" >Julio</th>
                                                                                                                {% endif %}
                                                                                                                {% if mes >= 8 %} 
                                                                                                                    <th colspan="5" >Agosto</th>
                                                                                                                {% endif %}  
                                                                                                                {% if mes >= 9 %} 
                                                                                                                    <th colspan="5" >Septiembre</th>
                                                                                                                {% endif %}  
                                                                                                                {% if mes >= 10 %} 
                                                                                                                    <th colspan="5" >Octubre</th>
                                                                                                                {% endif %}  
                                                                                                                {% if mes >= 11 %} 
                                                                                                                    <th colspan="5" >Noviembre</th>
                                                                                                                {% endif %}  
                                                                                                                {% if mes >= 12 %} 
                                                                                                                    <th colspan="5" >Diciembre</th>
                                                                                                                {% endif %}  

                                                                                                            <tr>
                                                                                                               {% for i in range(1, mes) %} 

                                                                                                                    <th>Program.</th>
                                                                                                                    <th>Realizado</th>
                                                                                                                    <th>Costo<br>Programado</th>
                                                                                                                    <th>Costo<br>Real</th>
                                                                                                                    <th>%</th>                                                                        
                                                                                                               {% endfor %} 

                                                                                                            </tr>

                                                                                                            </tr>

                                                                                                        </thead> 
                                                                                                        <tfoot>
                                                                                                            <tr>
                                                                                                                {% if mes == 1 %} 
                                                                                                                 <td align="center" colspan="9" > 
                                                                                                                {% endif %}     
                                                                                                                {% if mes == 2 %} 
                                                                                                                 <td align="center" colspan="14" > 
                                                                                                                {% endif %}
                                                                                                                {% if mes == 3 %} 
                                                                                                                 <td align="center" colspan="19" > 
                                                                                                                {% endif %}
                                                                                                                {% if mes == 4 %} 
                                                                                                                 <td align="center" colspan="24" > 
                                                                                                                {% endif %}

                                                                                                                     <div id="container{{ res.codResEspUni }}" class="highcharts-container" style="height:210px; margin: 0 2em; clear:both; min-width: 1000px"></div>
                                                                                                                 </td>
                                                                                                            </tr> 
                                                                                                        </tfoot>
                                                                                                        <tbody>
                                                                                                        {% for actividadAux in res.actividadesTemplate %}                                                                       
                                                                                                            {% for actividad in actividades %}                                                                     
                                                                                                               {% if actividadAux.codActUniTemp == actividad.actTemp.codActUniTemp %}                                                                            
                                                                                                                        <tr>
                                                                                                                            <td>
                                                                                                                                {{ actividadAux.descActUniTemp }}
                                                                                                                            </td>
                                                                                                                            <td align="center">
                                                                                                                                {{ actividad.metaAnualActUni }}
                                                                                                                            </td>
                                                                                                                            <td >
                                                                                                                                {{ actividad.getResponsableActUni }}
                                                                                                                            </td>
                                                                                                                            <td align="center">
                                                                                                                                {{ "$ "  ~ actividad.getCosto }}
                                                                                                                            </td>
                                                                                                                            {% for resultadoAct in actividad.getResultadoactUniSal %}
                                                                                                                                {% if mes >= resultadoAct.mes  %}
                                                                                                                                    <td align="center">
                                                                                                                                        {{ resultadoAct.getResulActProgramado }}
                                                                                                                                    </td>
                                                                                                                                    <td align="center">
                                                                                                                                        {% if resultadoAct.mes == mes   %}
                                                                                                                                            <input name="resultadoRealizado_{{ resultadoAct.idResulAct }}" size="2" value="{{ resultadoAct.getResulActRealizado }}"  ></input>
                                                                                                                                        {% else %}
                                                                                                                                            <input name="resultadoRealizado_{{ resultadoAct.idResulAct }}" size="2" value="{{ resultadoAct.getResulActRealizado }}" readonly="readonly"  ></input>
                                                                                                                                        {% endif %}  

                                                                                                                                    </td> 
                                                                                                                                    <td align="center">
                                                                                                                                         {{ "$ " ~ resultadoAct.getCostoProgramado }}
                                                                                                                                    </td>
                                                                                                                                    <td align="center">
                                                                                                                                        {% if mes == resultadoAct.mes  %}
                                                                                                                                            <input name="costoReal_{{ resultadoAct.idResulAct }}" size="2" value="{{ resultadoAct.getCostoReal }}"  ></input>
                                                                                                                                        {% else %}
                                                                                                                                            <input name="costoReal_{{ resultadoAct.idResulAct }}" size="2" value="{{ resultadoAct.getCostoReal }}" readonly="readonly"  ></input>
                                                                                                                                        {% endif %}
                                                                                                                                    </td>
                                                                                                                                    <td align="center">
                                                                                                                                            {{  resultadoAct.getPorcentajeCumplimiento ~ "%"  }}
                                                                                                                                    </td>

                                                                                                                                {%  endif%}                                                                                    
                                                                                                                            {% endfor %}
                                                                                                                        </tr>                                                                            
                                                                                                               {% endif %}
                                                                                                            {% endfor %}
                                                                                                        {% endfor %}                                                                                
                                                                                                        </tbody>
                                                                                                        </table>                                                                
                                                                                                    </div>
                                                                                                </td>
                                                                                            </tr>                                                    
                                                                                        {# endif #}
                                                                                    {% endfor %}
                                                                                </table>                                        
                                                                            </div>
                                                                        </td>                            
                                                                </tr>
                                                    {% endif %}                                              
                                            {% endfor %}                                                                                           
                                    {% endif %}  
                                    
                                </table>
                                </div>
                            </td>                           
                        </tr>
                {% endfor %}
            {% endif %}
            
            
            
            <tr>           
                <td colspan="2" align="center">
                <br></br>                                    
                </td>
            </tr>        
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Guardar" name= "agregar" id="agregar"</input>                    
                </td>
            </tr>        
        </table>   
    </form>
    <br></br>
    <br></br>

{% endblock %}