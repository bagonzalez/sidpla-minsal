{# Muestra todos las opciones #}
{% block body %}
    <input type='hidden' name='idfila' id="idfila" value='{{idfila}}' /> 
    <input type='hidden' name='idfilaResultado' id="idfilaResultado" value='{{idfilaResultado}}' /> 
    <input type='hidden' name='idfilaActividad' id="idfilaActividad" value='' /> 
     {% if objUniControl =='true' %}
        <input type='hidden' name='objUniControl' id="objUniControl" value='true' />
   {% else %}
        <input type='hidden' name='objUniControl' id="objUniControl" value='false' />
        {% endif %}
    <table WIDTH='85%' class="tablaPlantilla">
        <thead>
            <tr  style=" font-size: 14px;">
                <th class="thEncabezadoPlantilla"><strong>  Cod </strong></th>
                <th class="thEncabezadoPlantilla"><strong> Actividades </strong>
                </th>
                <th class="thEncabezadoPlantilla"><strong>  Acciones </strong>
                </th>
            </tr>
        </thead>
        <tbody>
    {% if actividades is defined %}   
        {% for  actividad in  actividades%}
                <tr>
                    <td class="tdCuerpoPlantilla">{%if actividad.actNomenclatura is null%}<strong> En Asignaci√≥n </strong>{%else%}{{actividad.actNomenclatura}}{%endif%}</td>
                    <td class="tdCuerpoPlantilla">{{actividad.getActDescripcion}}
                    </td>
                    <td class="tdBotonesIconos" WIDTH='60' >
                        <input width="50" height="50" type="image" src="{{ asset('/images/iconos/editar.png')}}" id="editar" value="Editar" onclick="$('#idfilaActividad').attr('value',{{actividad.getIdAct}});this.form.action='{{ path('MinSalSidPlaGesObjEspBundle_editarActividad') }}';" />
                        <br/>Editar
                    </td>
                </tr>
        {% endfor %}
    {% endif %}
        </tbody>
    </table>

{% endblock %}








